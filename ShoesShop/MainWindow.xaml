<Window x:Class="ShoesShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesShop"
        mc:Ignorable="d"
        Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnBack" Content="Назад" Style="{StaticResource ButtonStyle}" 
                    Margin="5,0" HorizontalAlignment="Right" Click="btnBack_Click" />

        <Grid Grid.Row="1" Background="White" Margin="16">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   BorderThickness="0" Source="Pages/AuthPage.xaml"/>
        </Grid>

    </Grid>
</Window>
