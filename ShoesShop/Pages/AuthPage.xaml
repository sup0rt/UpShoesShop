<Page x:Class="ShoesShop.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница авторизации" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите логин" HorizontalContentAlignment="Center"/>
            <TextBox x:Name="tbLogin" Margin="5, 0, 5, 5" HorizontalContentAlignment="Center" Width="150"/>
            <Label Content="Введите пароль" HorizontalContentAlignment="Center"/>
            <PasswordBox x:Name="pbPassword" Margin="5, 0, 5, 10" HorizontalContentAlignment="Center" Width="150"/>
            <Button x:Name="btnEnter" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnEnter_Click" />
        </StackPanel>
    </Grid>
</Page>
