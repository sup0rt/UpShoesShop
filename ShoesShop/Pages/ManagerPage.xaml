<Page x:Class="ShoesShop.Pages.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница менеджера" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Сортировать" />
                <ComboBox x:Name="cmbSort" SelectionChanged="cmbSort_SelectionChanged" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Категория" />
                <ComboBox x:Name="cmbCategory" DisplayMemberPath="name" SelectedItem="{Binding Category}"  SelectedValuePath="id" SelectionChanged="cmbCategory_SelectionChanged" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Поставщик" />
                <ComboBox x:Name="cmbDealer" DisplayMemberPath="name" SelectedItem="{Binding Dealer}"  SelectedValuePath="id" SelectionChanged="cmbDealer_SelectionChanged" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Производитель" />
                <ComboBox x:Name="cmbProducer" DisplayMemberPath="name" SelectedItem="{Binding Producer}"  SelectedValuePath="id" SelectionChanged="cmbProducer_SelectionChanged" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Поиск" />
                <TextBox x:Name="tbSearch" Width=" 110" TextChanged="tbSearch_TextChanged"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                <Button x:Name="btnClear" Content="Очистить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnClear_Click" />
            </StackPanel>
        </StackPanel>
        
        <ListView Name="lvProducts" Grid.Row="1" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>

                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Row="1" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photos/Product.photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /Photos/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="1"  Text="{Binding articul}" HorizontalAlignment="Center" />
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="2" HorizontalAlignment="Center" FontSize="18" Text="{Binding name}"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="3" HorizontalAlignment="Center" FontSize="18" Text="{Binding Category.name}"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="4" HorizontalAlignment="Center" FontSize="18" Text="{Binding price}"/>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
