<Page x:Class="ShoesShop.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800" Background="White"
      Title="ProductPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="Артикул" />
            <TextBox x:Name="tbArticul" />
            <Label Content="Название" />
            <TextBox x:Name="tbName" />
            <Label Content="Ед. измерения" />
            <TextBox x:Name="tbMeasureUnit" />
            <Label Content="Цена" />
            <TextBox x:Name="tbPrice" />
            <Label Content="Поставщик" />
            <ComboBox x:Name="cmbDealer" DisplayMemberPath="name"  SelectedValuePath="id" />
            <Label Content="Производитель" />
            <ComboBox x:Name="cmbProducer" DisplayMemberPath="name" SelectedValuePath="id" />
            <Label Content="Категория" />
            <ComboBox x:Name="cmbCategory" DisplayMemberPath="name" SelectedValuePath="id" />
            <Label Content="Скидка" />
            <TextBox x:Name="tbDiscount" />
            <Label Content="Остаток" />
            <TextBox x:Name="tbStock" />
            <Label Content="Описание" />
            <TextBox x:Name="tbDesc" />
            <Label Content="фото" />
            <TextBox x:Name="tbPhoto" />
            <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</Page>
