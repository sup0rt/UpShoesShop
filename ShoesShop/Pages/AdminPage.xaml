<Page x:Class="ShoesShop.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      xmlns:converters="clr-namespace:ShoesShop.Converters"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Страница администратора" Style="{StaticResource PageStyle}">

    <Page.Resources>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:HighDiscountCheckConverter x:Key="HighDiscountCheckConverter"/>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <Button x:Name="btnProduct" Content="Товары" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Margin="5" Click="btnProduct_Click" Style="{StaticResource ButtonStyle}" />
                <Button x:Name="btnOrder" Content="Заказы" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Click="btnOrder_Click" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Сортировать" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbSort" SelectionChanged="cmbSort_SelectionChanged" 
                          Width="120" Style="{StaticResource ComboBoxStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Категория" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbCategory" DisplayMemberPath="name" SelectedValuePath="id" 
                          SelectionChanged="cmbCategory_SelectionChanged" Width="120"
                          Style="{StaticResource ComboBoxStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Поставщик" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbDealer" DisplayMemberPath="name" SelectedValuePath="id" 
                          SelectionChanged="cmbDealer_SelectionChanged" Width="120"
                          Style="{StaticResource ComboBoxStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Производитель" Style="{StaticResource LabelStyle}"/>
                <ComboBox x:Name="cmbProducer" DisplayMemberPath="name" SelectedValuePath="id" 
                          SelectionChanged="cmbProducer_SelectionChanged" Width="120"
                          Style="{StaticResource ComboBoxStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5">
                <Label Content="Поиск" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="tbSearch" Width="110" TextChanged="tbSearch_TextChanged" 
                         Style="{StaticResource TextBoxStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                <Button x:Name="btnClear" Content="Очистить" HorizontalAlignment="Center" 
                        VerticalAlignment="Center" Click="btnClear_Click" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <ListView Name="lvProducts" Grid.Row="1" HorizontalContentAlignment="Center" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  PreviewMouseRightButtonDown="lvProducts_PreviewMouseRightButtonDown" 
                  SelectionChanged="lvProducts_SelectionChanged" Style="{StaticResource ListViewStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="rowBorder" Padding="0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>

                                    <DataTrigger Binding="{Binding activeDiscount, Converter={StaticResource HighDiscountCheckConverter}}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HighDiscountBrush}"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding stockAmount}" Value="0">
                                        <Setter Property="Background" Value="{StaticResource ZeroStockBrush}"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.RowSpan="3" Background="Transparent">
                                <Image Width="200" Stretch="UniformToFill" HorizontalAlignment="Center">
                                    <Image.Source>
                                        <Binding Path="photo" Converter="{StaticResource ImagePathConverter}"/>
                                    </Image.Source>
                                </Image>
                            </Border>

                            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" 
                                       VerticalAlignment="Center" Margin="10,0" Background="Transparent">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" TextAlignment="Right" Width="200" 
                                               FontSize="18" Text="{Binding name}" Style="{StaticResource TextBlockStyle}"/>
                                    <Label Content="|" Margin="10,0" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="200" 
                                               FontSize="18" Text="{Binding Category.name}" Style="{StaticResource TextBlockStyle}"/>
                                </StackPanel>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding description}" Margin="0,5" Style="{StaticResource TextBlockStyle}"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding Producer.name}" Style="{StaticResource TextBlockStyle}"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding Dealer.name}" Style="{StaticResource TextBlockStyle}"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding price}" Style="{StaticResource TextBlockStyle}"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding measureUnit}" Style="{StaticResource TextBlockStyle}"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="400" 
                                           Text="{Binding stockAmount}" Style="{StaticResource TextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" 
           VerticalAlignment="Center" Margin="0,0,10,0" Background="Transparent">
                                <TextBlock x:Name="tbDiscount" Text="{Binding activeDiscount, StringFormat='Скидка: {0}%'}" 
               Visibility="{Binding activeDiscount, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}">
                                            <Setter Property="Padding" Value="5,2"/>
                                            <Setter Property="Margin" Value="5"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Name="lvOrders" Grid.Row="1" HorizontalContentAlignment="Center" Visibility="Collapsed" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  PreviewMouseRightButtonDown="lvOrders_PreviewMouseRightButtonDown" 
                  SelectionChanged="lvOrders_SelectionChanged" Style="{StaticResource ListViewStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" 
                                   VerticalAlignment="Center" Margin="10,0">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="300" 
                                       Text="{Binding ProductListDescription, StringFormat='Состав заказа: {0}'}"
                                       Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="300" 
                                       Text="{Binding OrderStatus.description, StringFormat='Статус: {0}'}" Margin="0,5"
                                       Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="300" 
                                       Text="{Binding PickUpPoint.adress, StringFormat='ПВЗ: {0}'}"
                                       Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="300" 
                                       Text="{Binding creationDate, StringFormat='Дата создания: {0:dd.MM.yyyy HH:mm}'}"
                                       Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Orientation="Vertical" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" 
                                       Text="{Binding deliveryDate, StringFormat='Дата доставки: {0:dd.MM.yyyy HH:mm}'}" 
                                       Visibility="{Binding deliveryDate, Converter={StaticResource NullToVisibilityConverter}}"
                                       Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Background="LightGray">
            <Button x:Name="btnAdd" Content="Создать" Width="120" Margin="5" Padding="5" 
                   Click="btnAdd_Click" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>