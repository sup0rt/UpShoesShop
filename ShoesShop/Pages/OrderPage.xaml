<Page x:Class="ShoesShop.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900" Background="White"
      Title="OrderPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя часть - данные заказа -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Дата создания" Width="120"/>
                <DatePicker Name="dpCreationDate" Width="200"/>
                <Label Content="Дата доставки" Width="120" Margin="20,0,0,0"/>
                <DatePicker Name="dpDeliveryDate" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Адрес ПВЗ" Width="120"/>
                <TextBox x:Name="tbPickUpAdress" Width="424"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Клиент" Width="120"/>
                <ComboBox x:Name="cmbClient" DisplayMemberPath="fio" SelectedValuePath="id" Width="200"/>
                <Label Content="Код получения" Width="120" Margin="20,0,0,0"/>
                <TextBox x:Name="tbPickUpCode" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Статус" Width="120"/>
                <ComboBox x:Name="cmbStatus" DisplayMemberPath="description" SelectedValuePath="id" Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- Средняя часть - состав заказа (DataGrid) -->
        <GroupBox Grid.Row="1" Header="Состав заказа" Margin="10">
            <DataGrid x:Name="dgOrderProducts" AutoGenerateColumns="False" 
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      SelectionMode="Single" IsReadOnly="True">
                <DataGrid.Columns>
                    <!-- Артикул -->
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Product.articul}" Width="100"/>

                    <!-- Название -->
                    <DataGridTextColumn Header="Название" Binding="{Binding Product.name}" Width="200"/>

                    <!-- Остаток на складе -->
                    <DataGridTextColumn Header="Остаток" Width="80">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Product.stockAmount"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <!-- Кнопка - -->
                    <DataGridTemplateColumn Header="" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="-" Width="25" Height="25" 
                                        Click="btnDecrease_Click" Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Quantity}" Value="0">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Количество -->
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Quantity}" Value="0">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Кнопка + -->
                    <DataGridTemplateColumn Header="" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="+" Width="25" Height="25" 
                                        Click="btnIncrease_Click" Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MaxQuantityReached}">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Цена -->
                    <DataGridTextColumn Header="Цена" Width="80">
                        <DataGridTextColumn.Binding>
                            <Binding Path="Product.price" StringFormat="{}{0:N2}"/>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <!-- Сумма -->
                    <DataGridTextColumn Header="Сумма" Width="90">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0:N2}">
                                <Binding Path="Quantity"/>
                                <Binding Path="Product.price"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Нижняя часть - итоги и кнопки -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Итоговая информация -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Товаров: " FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalItems" Text="0" FontWeight="Bold" Margin="5,0,20,0"/>
                <TextBlock Text="Общая сумма: " FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalSum" Text="0.00 ₽" FontWeight="Bold" Margin="5,0"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnSave" Content="Сохранить" Width="100" Height="30" 
                        Margin="5" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Отмена" Width="100" Height="30" 
                        Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>