<Page x:Class="ShoesShop.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница пользователя" Background="White">

    <Grid>
        <ListView Name="lvProducts" Grid.Row="0" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled">


            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Image Width="200" Grid.Column="0" Grid.ColumnSpan="3" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="photo">
                                    <Binding.TargetNullValue>
                                        <BitmapImage UriSource="pack://application:,,,/Photos/picture.png"/>
                                    </Binding.TargetNullValue>
                                    </Binding>
                            </Image.Source>
                        </Image>

                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" >
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1">
                                <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" HorizontalAlignment="Left" FontSize="18" Text="{Binding name}"/>
                                <Label Content="|"/>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" HorizontalAlignment="Right" FontSize="18" Text="{Binding Category.name}"/>
                            </StackPanel>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="1" Text="{Binding description}" HorizontalAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="2" Text="{Binding Producer.name}" HorizontalAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="3" Text="{Binding Dealer.name}" HorizontalAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="4" Text="{Binding price}" HorizontalAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="5" Text="{Binding measureUnit}" HorizontalAlignment="Center" />
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="6" Text="{Binding stockAmount}" HorizontalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" >
                            <TextBlock x:Name="tbDiscount"/>
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
